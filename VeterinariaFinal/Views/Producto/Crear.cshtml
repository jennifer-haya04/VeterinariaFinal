@using VeterinariaFinal.Models
@model VeterinariaFinal.Models.producto
@{
    ViewBag.Title = "Crear";
}

<h3>.</h3>
<h2>Nuevo Producto:</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => Model.idProducto)

    <div class="form-group">
        @Html.LabelFor(model => Model.nombreProd, "Nombre del Producto:")
        @Html.EditorFor(model => Model.nombreProd)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.precio, "Precio:")
        @Html.EditorFor(model => Model.precio)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.categoria, "Categoría:")
        @Html.DropDownList("Categoría", new SelectList(ViewBag.listacategoria, "idCategoria", "nombreCat"))
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.img, "Imagen:")
        <input type="file" asp-for="UploadedFile" />
    </div>

    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-primary" />
    </div>
}

