
@{
    ViewBag.Title = "Login";
}

<h2>.</h2>
<div class="container body-content">
    <div class="panel panel-primary center-block" style="width: 300px" >
        <div class="panel-heading" style="text-align: center">Iniciar Sesión</div>
        <div class="panel-body">
            <div class="form-group">
                <label for="usuario">Usuario:</label>
                <input type="text" class="form-control" id="usuario">
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password">
            </div>
            <button class="btn btn-primary center-block">Ingresar</button>
            <a class="text-info">
                @Html.ActionLink("Aún no tienes una cuenta. Registrate", "Index", "Usuario")
            </a>
        </div>
    </div>
</div>



